<?xml version="1.0"?>

    <resources>

    <!-- Base application theme. -->



    -<style parent="Theme.AppCompat.Light.DarkActionBar" name="AppTheme">

    <!-- Customize your theme here. -->


    <item name="colorPrimary">@color/colorPrimary</item>

    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    <item name="colorAccent">@color/color_designer_green</item>

    <item name="android:colorBackground">@color/grey_background</item>

</style>

    <style parent="BaseTheme" name="AppThemeTest"/>


    -<style parent="Theme.AppCompat.Light.NoActionBar" name="BaseTheme">

    <item name="colorPrimary">@color/colorPrimary</item>

    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    <item name="colorControlHighlight">@color/colorPrimary</item>

    <item name="colorAccent">@color/colorAccent</item>

    <!-- color for widget theming, eg EditText. Doesn't effect ActionBar. -->


    <item name="colorControlNormal">@android:color/white</item>

</style>
    <style name="Theme.AppCompat.Transparent.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    -<style parent="Theme.AppCompat.Light.DarkActionBar" name="AppTheme.Reflect">

    <!-- Customize your theme here. -->


    <item name="colorPrimary">@color/colorPrimary</item>

    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    <item name="colorAccent">@color/color_designer_green</item>

    <item name="actionBarStyle">@style/ActionBarStyle</item>

    <item name="android:colorBackground">@color/grey_background</item>

</style>


    -<style parent="Theme.AppCompat.Light.NoActionBar" name="AppTheme.NoActionBar">

    <item name="colorPrimary">@color/colorPrimary</item>

    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    <item name="colorAccent">@color/color_designer_green</item>

    <item name="windowActionBar">false</item>

    <item name="windowNoTitle">true</item>

    <item name="android:colorBackground">@color/grey_background</item>

</style>


    -<style parent="Theme.AppCompat.Light.NoActionBar" name="AppTheme.NoActionBar2">

    <item name="colorPrimary">@color/colorPrimary</item>

    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    <item name="colorAccent">@color/color_designer_green</item>

    <item name="titleTextColor">@android:color/white</item>

    <item name="actionMenuTextColor">@color/white</item>

    <item name="android:colorBackground">@color/grey_background</item>

</style>


    -<style parent="Theme.AppCompat.Light.NoActionBar" name="ToolbarTheme">

    <item name="android:textColorSecondary">@color/green</item>

    <item name="android:textColor">@color/white</item>

</style>
    `

    -<style parent="Widget.Design.TabLayout" name="MyStyle">

    <item name="tabIndicatorColor">#FFFF</item>

    <item name="tabIndicatorHeight">2dp</item>

    <item name="tabPaddingStart">8dp</item>

    <item name="tabPaddingEnd">8dp</item>

    <item name="tabBackground">?attr/selectableItemBackground</item>

    <item name="tabSelectedTextColor">#fff</item>

</style>


    -<style parent="Widget.Design.TabLayout" name="tab_style_main_page">

    <item name="android:textSize">12sp</item>

</style>


    -<style parent="Base.Widget.AppCompat.ActionBar" name="ActionBarStyle">

    <item name="titleTextStyle">@style/ActionBarTitle</item>

    <item name="android:background">@drawable/actionbarbackground</item>

</style>


    -<style parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" name="ActionBarTitle">

    <item name="android:textColor">@color/colorPrimary</item>

</style>

    <style parent="ThemeOverlay.AppCompat.Dark.ActionBar" name="AppTheme.AppBarOverlay"/>

    <style parent="ThemeOverlay.AppCompat.Light" name="AppTheme.PopupOverlay"/>

    <item name="item_click_support" type="id"/>


    -<style parent="TextAppearance.MaterialCalendarWidget.Date" name="CustomDateTextAppearance">

    <item name="android:textSize">@dimen/dimen16sp</item>

    <item name="android:fontFamily">sans-serif</item>

</style>


    -<style parent="TextAppearance.MaterialCalendarWidget.Date" name="CustomWeekDayTextAppearnce">

    <item name="android:textColor">@color/black</item>

    <item name="android:textSize">@dimen/dimen16sp</item>

    <item name="android:textStyle">bold</item>

    <item name="android:fontFamily">sans-serif</item>

</style>


    -<style parent="Widget.AppCompat.CompoundButton.Switch" name="SwitchCompat.Classroom">

    <item name="android:thumb">@drawable/custom_switch</item>

    <item name="showText">true</item>

    <item name="android:textOn">@string/activate</item>

    <item name="android:textOff">@string/deactivate</item>

</style>


    -<style parent="Theme.AppCompat.Light.DarkActionBar" name="AppTheme.new">

    <!-- Customize your theme here. -->


    <item name="colorPrimary">@color/colorPrimary</item>

    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    <item name="colorAccent">@color/color_designer_green</item>

    <item name="android:colorBackground">@color/grey_background</item>

</style>

    <color name="grey_background">#EBEBEB</color>


    -<style parent="AppTheme" name="FullscreenTheme">

    <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>

    <item name="android:windowActionBarOverlay">true</item>

    <item name="android:windowBackground">@null</item>

    <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>

    <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>

</style>


    -<style parent="Widget.AppCompat.ActionBar" name="FullscreenActionBarStyle">

    <item name="android:background">@color/black_overlay</item>

</style>


    -<style parent="RippleStyleWhite" name="RippleStyleBlack">

    <item name="mrl_rippleColor">#8096989A</item>

</style>

    <!-- Ripple Effect -->



    -<style name="RippleStyleWhite">

    <item name="mrl_rippleOverlay">true</item>

    <item name="mrl_rippleColor">#80FFFFFF</item>

    <item name="mrl_rippleHover">true</item>

    <item name="mrl_rippleAlpha">0.2</item>

</style>

</resources>