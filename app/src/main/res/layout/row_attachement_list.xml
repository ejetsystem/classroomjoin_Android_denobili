<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp">

        <ImageView
            android:id="@+id/thumb_file_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:background="@color/transparent"
            android:contentDescription="@string/nan"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_photo_black_24dp" />

        <TextView
            android:id="@+id/id_attachement_name"
            android:layout_width="149dp"
            android:layout_height="29dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"

            android:ellipsize="marquee"
            android:maxEms="20"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="@string/nan"
            app:layout_constraintBottom_toBottomOf="@+id/thumb_file_type"
            app:layout_constraintLeft_toRightOf="@+id/thumb_file_type"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/thumb_file_type"
            app:layout_constraintVertical_bias="0.4" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>