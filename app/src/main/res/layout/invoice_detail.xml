<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/holo_blue_light"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fragment_title_padding_10"
        android:id="@+id/fee_status"/>
    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:id="@+id/back"
        android:layout_margin="@dimen/fragment_title_padding_10"
        android:src="@drawable/ic_arrow_back_white_24dp"
        />
     <TextView
         android:id="@+id/invoiceD"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Invoice-#13032"
         android:fontFamily="@font/poppins_bold"
         android:layout_toRightOf="@+id/back"
         android:textColor="@color/white"
         android:textSize="18dp"
         android:layout_marginTop="11dp"/>
    <TextView
        android:id="@+id/rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECEIPT FOR"
        android:fontFamily="@font/poppins_medium"
        android:layout_below="@+id/back"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECEIPT FOR"
        android:fontFamily="@font/poppins_bold"
        android:layout_below="@+id/rec"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/size_20sp"/>
</RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/invoiceImg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/invoice"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/inId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INVOICE ID"
            android:layout_toRightOf="@+id/invoiceImg"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/inNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INVOICE ID"
            android:fontFamily="@font/poppins_medium"
            android:layout_below="@+id/inId"
            android:layout_toRightOf="@+id/invoiceImg"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/inNum"
            android:layout_marginTop="10dp"
            android:background="@color/gray"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/amtImg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/inamount"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/inAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INVOICE AMOUNT"
            android:fontFamily="@font/poppins_bold"
            android:layout_toRightOf="@+id/amtImg"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/inAm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INVOICE ID"
            android:fontFamily="@font/poppins_medium"
            android:layout_below="@+id/inAmt"
            android:layout_toRightOf="@+id/amtImg"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/inAm"
            android:layout_marginTop="10dp"
            android:background="@color/gray"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/feeImg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/feedate"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/feeMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEE MONTH-YEAR"
            android:fontFamily="@font/poppins_bold"
            android:layout_toRightOf="@+id/feeImg"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/feeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INVOICE ID"
            android:fontFamily="@font/poppins_medium"
            android:layout_below="@+id/feeMonth"
            android:layout_toRightOf="@+id/feeImg"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/feeDate"
            android:layout_marginTop="10dp"
            android:background="@color/gray"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/recImg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/reciept"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/reci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECIPIENT"
            android:layout_toRightOf="@+id/recImg"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/recNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INVOICE ID"
            android:layout_below="@+id/reci"
            android:layout_toRightOf="@+id/recImg"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/blue"
            android:layout_marginLeft="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/recNum"
            android:layout_marginTop="10dp"
            android:background="@color/gray"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/adjusImg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/adjust"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/adjusId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADJUSTMENT"
            android:fontFamily="@font/poppins_bold"
            android:layout_toRightOf="@+id/adjusImg"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/adjusNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:layout_below="@+id/adjusId"
            android:layout_toRightOf="@+id/adjusImg"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/blue"
            android:layout_marginLeft="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/adjusNum"
            android:layout_marginTop="10dp"
            android:background="@color/gray"/>

    </RelativeLayout>
<Button
    android:id="@+id/transactionD"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SEE TRANSACTIONS"
    android:layout_gravity="center"
    android:visibility="gone"
    android:fontFamily="@font/poppins_bold"
    android:layout_marginTop="@dimen/fragment_title_padding_10"
    android:background="@drawable/list_rec"
    android:paddingLeft="@dimen/fragment_title_padding_10"
    android:paddingRight="@dimen/fragment_title_padding_10"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/anuual_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <include
        android:id="@+id/include_content"
        layout="@layout/content_main" />

</LinearLayout>
