    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.classroomjoin.app.helper.CircularTextView
            android:id="@+id/text_first_class"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:ems="1"
            android:gravity="center_vertical|center_horizontal"
            android:maxEms="1"
            android:maxLength="1"
            android:maxLines="1"
            android:text="@string/nan"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_first_class"
            android:layout_toEndOf="@+id/text_first_class"
            android:layout_toStartOf="@+id/class_edit"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif"
            android:maxLength="16"
            android:maxLines="2"
            android:paddingStart="2dp"
            android:singleLine="true"
            android:text="@string/nan"
            android:textColor="@color/titles_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/no_of_students"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/class_name"
            android:layout_toEndOf="@+id/text_first_class"
            android:fontFamily="sans-serif-light"
            android:gravity="start|center_vertical"
            android:paddingBottom="5dp"
            android:paddingStart="2dp"
            android:text="@string/nan"
            android:textAlignment="center"
            android:textColor="@color/titles_color"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/class_edit"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/circle_edit_icon" />


    </RelativeLayout>

