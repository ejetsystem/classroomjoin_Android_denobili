<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <agency.tango.android.avatarview.views.AvatarView
            android:id="@+id/profile_image_new"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:maxLength="1"
            android:maxLines="1"
            android:text="@string/allevents"
            android:textSize="22sp"
            android:visibility="visible"
            app:av_border_color="@android:color/white"
            app:av_border_width="2dp"
            app:av_text_size_percentage="55" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/row_connected_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingStart="5dp"
                android:text="@string/nan"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_userdata_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_connected_student_name"
                android:paddingStart="5dp"
                android:text="@string/nan"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/row_user_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_userdata_user_email"
                android:paddingStart="5dp"
                android:text="@string/susertype_parent"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/line_color"
        android:orientation="horizontal" />


</RelativeLayout>