<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"

    android:background="@drawable/rectangle_border"
    android:backgroundTint="@color/white"
    android:orientation="vertical"

    >
<ImageView
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:src="@drawable/arrow"
    android:id="@+id/back"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"/>
    <TextView
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="Verification..."
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="We have sent a 4 digit OTP to you registerd mobile number +91********** Please enter the OTP below to continue."
        android:textSize="16dp"
        android:layout_marginTop="@dimen/size_20sp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="00:00"/>
<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/otpver"
    android:tint="@color/green"
    android:layout_gravity="center"
    android:layout_marginTop="40dp"/>
    <com.denobili.app.sign_step.signup_manager.PinEntryEditText
        android:id="@+id/txt_pin_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="4"
        android:layout_margin="25dp"
        android:textIsSelectable="false"
        android:textSize="20sp" />
<TextView
    android:id="@+id/resendOtp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Resend OTP"
    android:layout_gravity="end"
    android:visibility="visible"
    android:layout_marginRight="30dp"/>
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size"
        android:backgroundTint="@color/green"
        android:background="@drawable/rectangle_border"
        android:layout_marginRight="@dimen/size_20sp"
        android:layout_marginLeft="@dimen/size_20sp"
        android:text="Verify"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/size_20sp"
        android:textAllCaps="false"/>

</LinearLayout>