<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/student_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <com.classroomjoin.app.helper.CircularTextView
            android:id="@+id/row_connected_studentname_short"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal|center_vertical"
            android:maxLength="1"
            android:maxLines="1"
            android:text="@string/allevents"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/row_connected_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/row_connected_studentname_short"
            android:paddingStart="10dp"
            android:text="@string/nan"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_connected_student_classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_connected_student_name"
            android:layout_toEndOf="@+id/row_connected_studentname_short"
            android:paddingStart="10dp"
            android:text="@string/nan"
            android:textSize="16sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>