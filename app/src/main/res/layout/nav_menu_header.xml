<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/menu_back_new"
        android:contentDescription="@string/nan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/content_area_padding"
        android:orientation="vertical">

        <agency.tango.android.avatarview.views.AvatarView
            android:id="@+id/profile_image_new"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            android:visibility="visible"
            app:av_border_color="@android:color/white"
            app:av_border_width="2dp"
            app:av_text_size_percentage="55" />

        <TextView
            android:id="@+id/username_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:text="@string/nan"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/av_default_border"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/user_mail_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="2dp"
            android:text="@string/nan"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/av_default_border"
            android:textSize="14sp" />
    </LinearLayout>


</FrameLayout>