<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.classroomjoin.app">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />


    <application
        android:name=".helper_utils.Myapp"
        android:allowBackup="true"
        android:icon="@mipmap/logo_1x"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_1x"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:theme,android:label"
        android:networkSecurityConfig="@xml/network_security_config"
       android:usesCleartextTraffic="true"
        >


        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false" />

        <activity
            android:name=".homepage.HomePage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".studentDetailPage.StudentDetailPage" />
        <activity
            android:name=".studentDetailPage.StudentDetailEditPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".attendancePage.AttendanceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".postAttendancePage.AttendenceSelectionListingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar2" />
        <activity
            android:name=".mystudentsPage.MyStudentsListingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".loginPage.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".signUpPage.SignUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".splashPage.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".addSocialGrade.AddSocialGradePage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.new" />
        <activity
            android:name=".socialGradeSelectionPage.SocialGradeSelectionPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar2" />
        <activity
            android:name=".templatePage.TemplateSelectionPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar2" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <activity
            android:name=".studentHomePage.Student_Home_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".smsCommunicationSettingPage.SmsCommunicationSettingPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.new" />

        <activity
            android:name=".smsCommunicationSettingPage.MessageCommunicationSettingPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.new" />
        <activity
            android:name=".emailSettingPage.EmailSettingPage"
            android:label="@string/email_communication_setting"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.new" />
        <activity
            android:name=".studentCodePage.InputStudentCode"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <service android:name=".helper_utils.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name=".helper_utils.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".teacherHomePage.TeacherHomePage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".classEditPage.EditClassPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".mySocialGradesPage.MySocialGradesListingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar2" />
        <activity
            android:name=".addTemplatePage.AddTemplatePage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".forgotPasswordPage.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <receiver android:name=".otpReaderLibrary.OtpReader">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".myConnectedStudents.MyConnectedStudentsListingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".studentDiaryPage.StudentDiaryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.new" />
        <activity
            android:name=".studentallEventsPage.AlleventsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.new" />
        <activity
            android:name=".studentEventDetailPage.EventDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.new">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.classroom.join.app"
                    android:pathPrefix="/id"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".studentDiaryEventDetailPage.DiaryEventDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.new" />
        <activity
            android:name=".studentInboxPage.StudentInboxPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.new" />
        <activity
            android:name=".studentSocialGradeReportPage.StudentSocialGradeReportActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".teacherReportPage.TeacherReportPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".teacherCommunicationReports.TeacherCommunicationReportPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".attendanceSummaryPage.AttendanceSummaryListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".teacherSocialGradeReport.SocialGradeClassReportPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".ReportsMessageDetails"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".teacherMessageSendPage.TeacherCommunicationPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar2"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".manageAccountsPackage.ManageAccountsPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".profilePage.ProfilePage"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTest" />
        <activity
            android:name=".attendancePage.ParentAttendanceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".teacherOutboxPage.Outboxpage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".teacherAttachmentPage.ImageChooserActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".teacherAttachmentPage.DocumentChooserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".profileEditPage.ProfileEditPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".profileEditPage.ProfileImageChooserActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".studentSearchPage.StudentSearchPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".loadWebPage.WebPage"
            android:label="@string/nav_back"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.new" />

        <service
            android:name=".helper_utils.CheckOutboxService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".outboxExpiredPage.OutboxExpiredPage"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".splashPage.LanguageSelectionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>